@model IEnumerable<BigSchool_NguyenDinhHung.Models.Course>

@{
    ViewBag.Title = "Home Page";
}

<div class="row">
    <ul class="course">
        @foreach (var course in Model)
        {
            <li>
                <div class="date">
                    <div class="month">
                        @course.DateTime.ToString("MM")
                    </div>
                    <div class="day">
                        @course.DateTime.ToString("dd")
                    </div>
                </div>
                <div class="details category">
                    <span class="lecturer">
                                @course.Lecturer.Name
                        <button data-user-id="@course.LecturerId" class="btn btn-primary js-toggle-follow">
                            Follow
                        </button>
                    </span>
                    <span class="lecturer">
                        @course.Category.Name
                    </span>
                    <button data-course-id="@course.Id" class="btn btn-default btn-sm js-toggle-attendance">Gonging?</button>
                </div>
            </li>
        }
    </ul>

    @section scripts
      {
        <script>
            $(document).ready(function () {
                $(".js-toggle-attendance").click(function (e) {
                    var button = $(e.target);
                    $.post("/api/attendances", { courseId: button.attr("data-course-id") })
                        .done(function () {
                            button
                                .removeClass("btn-default")
                                .addClass("btn-infor")
                                .text("Going");
                        })
                        .fail(function () {
                            alert("Something failed!");
                        });
                });
            });
        </script>
     }


</div>
